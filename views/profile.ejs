<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - GIS App</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Winky+Sans:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>
  <div class="container">
    <h1>Profile</h1>

    <div id="profile-content">
      <div class="loading">Loading...</div>
    </div>

    <button id="signOutBtn" class="sign-out-btn">Sign Out</button>
  </div>

  <script>
    // Check if user is logged in
    const token = sessionStorage.getItem('gis_token');
    const userInfo = sessionStorage.getItem('user_info');

    if (!token || !userInfo) {
      location.href = '/login';
    } else {
      const user = JSON.parse(userInfo);
      const profileContent = document.getElementById('profile-content');

      profileContent.innerHTML = `
        <div class="profile-card">
          <img src="${user.picture}" alt="Profile Picture" class="profile-picture">
          <h2>${user.name}</h2>
          <p class="email">${user.email}</p>
          <div class="user-details">
            <p><strong>Given Name:</strong> ${user.given_name || 'N/A'}</p>
            <p><strong>Family Name:</strong> ${user.family_name || 'N/A'}</p>
            <p><strong>Email Verified:</strong> ${user.email_verified ? 'Yes' : 'No'}</p>
          </div>
        </div>
      `;
    }

    // Sign out functionality
    document.getElementById('signOutBtn').addEventListener('click', function() {
      google.accounts.id.disableAutoSelect();
      sessionStorage.removeItem('gis_token');
      sessionStorage.removeItem('user_info');
      location.href = '/login';
    });

    // Initialize GIS for sign out
    google.accounts.id.initialize({
      client_id: '<%= clientId %>'
    });
  </script>
</body>
</html>
